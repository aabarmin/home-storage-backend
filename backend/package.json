{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for the Home IS",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "version": "echo '{\"version\": \"'$npm_package_version'\", \"build\": \"'$(date +%F)'\"}' > ./dist/version.json",
    "build": "npm run clean && tsc && npm run version",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma db push",
    "start": "node ./dist/index.js",
    "dev:start": "node --inspect ./dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --watch ./src -e ts --exec run-s build dev:start"
  },
  "author": "Aleksandr Barmin",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.23",
    "@types/sqlite3": "^3.1.8",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prisma": "^3.11.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@prisma/client": "^3.11.1",
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "multer": "^1.4.4",
    "sqlite3": "^5.0.2"
  }
}
